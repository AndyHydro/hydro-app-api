{
  "name": "hydro-app-api",
  "version": "1.0.0",
  "description": "A typescript express API for the Hydro App functions",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && sam local start-api",
    "build": "rm -rf build && tsc",
    "watch": "rm -rf build && tsc --watch",
    "deploy": "npx claudia create --handler build/lambda.handler --deploy-proxy-api --region us-east-1",
    "update": "npx claudia update",
    "getZipped": "aws lambda get-function --function-name hydro-app-api --query Code.Location --output text"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/AndyHydro/hydro-app-api"
  },
  "files": [
    "build/",
    "application.properties"
  ],
  "dependencies": {
    "@types/aws-serverless-express": "^3.0.1",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.40",
    "@types/node": "^10.9.4",
    "aws-serverless-express": "^3.3.5",
    "cloud-config-client": "^1.4.2",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-validator": "^5.3.0",
    "java-properties": "^0.2.10",
    "mysql": "^2.16.0",
    "typeorm": "^0.2.7",
    "web3": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "claudia": "^5.1.1",
    "typescript": "^3.0.3"
  }
}
