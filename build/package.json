{
  "name": "hydro-app-api",
  "version": "1.0.0",
  "description": "A typescript express API for the Hydro App functions",
  "main": "build/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node ./src/app.local.ts",
    "build": "rm -rf build && tsc && cp ./package.json ./claudia.json ./config.json ./build",
    "watch": "rm -rf build && mkdir ./build && cp ./package.json ./claudia.json ./config.json ./build && tsc --watch",
    "deploy": "npx claudia create --source build --handler lambda.handler --deploy-proxy-api --region us-east-1 --set-env-from-json config.json",
    "update": "npx claudia update --source build --set-env-from-json config.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/aws-serverless-express": "^3.0.1",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.40",
    "@types/node": "^10.9.4",
    "aws-serverless-express": "^3.3.5",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-validator": "^5.3.0",
    "mysql": "^2.16.0",
    "typeorm": "^0.2.7",
    "web3": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "claudia": "^5.1.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  }
}
